<h2 class="npc-name">
  <input class="npc-name-in" type="text" name="name" value="{{actor.name}}" placeholder="Name" />
</h2>

<div class="npc-stats-list npc-init">
  {{localize "l5r4.mech.init"}}:
  <input name="system.initiative.roll" type="number" value="{{system.initiative.roll}}" data-type="Number" />
  k
  <input name="system.initiative.keep" type="number" value="{{system.initiative.keep}}" data-type="Number" />
</div>
<div class="npc-stats-list npc-attack1">
  <a class="icon-item attack1-roll" data-roll="{{system.attack1.roll}}" data-keep="{{system.attack1.keep}}"
    data-desc="{{system.attack1.type}}">
    <img title="{{localize "l5r4.mech.attackRoll"}}" src="icons/dice/d10black.svg" />
  </a>
  {{localize "l5r4.mech.attack"}}:
  <input name="system.attack1.roll" type="number" value="{{system.attack1.roll}}" data-type="Number" />
  k
  <input name="system.attack1.keep" type="number" value="{{system.attack1.keep}}" data-type="Number" />
  <select name="system.attack1.type">
    <option selected disabled>{{localize "l5r4.mech.action"}}</option>
    {{#select system.attack1.type}}
    {{#each config.actionTypes as |name type|}}
    <option value="{{type}}">{{localize name}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>
